<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cd_hd"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#FFFFFF">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/ll_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView

                android:layout_width="@dimen/logo"
                android:layout_height="@dimen/logo"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:src="@mipmap/logo_school"
                local:layout_constraintBottom_toTopOf="parent"
                local:layout_constraintLeft_toRightOf="parent"
                local:layout_constraintTop_toBottomOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Home"
                android:textColor="@color/blue"
                android:textSize="20dp"
                local:layout_constraintBottom_toTopOf="parent"
                local:layout_constraintLeft_toRightOf="parent"
                local:layout_constraintRight_toLeftOf="parent"
                local:layout_constraintTop_toBottomOf="parent" />

            <ImageView
                android:id="@+id/logout"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/logout"
                local:layout_constraintBottom_toTopOf="parent"
                local:layout_constraintRight_toLeftOf="parent"
                local:layout_constraintTop_toBottomOf="parent" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#DADADA" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:src="@mipmap/bus" />

    <EditText
        android:id="@+id/ed_busid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/edittext_border"
        android:hint="Bus id..."
        android:padding="10dp"
        android:textColor="@color/colorblack"
        android:textColorHint="@color/grey"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/edittext_border"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="1dp">

            <Spinner

                android:id="@+id/sp_shift"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:paddingRight="40dp"
                android:spinnerMode="dropdown"
                android:textAlignment="center" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:src="@mipmap/spinner_downarrow" />

        </RelativeLayout>


    </LinearLayout>

    <EditText
        android:id="@+id/tp_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/edittext_border"
        android:hint="Trip no..."
        android:padding="10dp"
        android:textColor="@color/colorblack"
        android:textColorHint="@color/grey"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/img_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_press_new"
        android:gravity="center"
        android:padding="10dp"
        android:text="Next"
        android:textColor="@color/textcolor"
        android:textSize="20sp"
        android:textStyle="bold" />


</LinearLayout>






