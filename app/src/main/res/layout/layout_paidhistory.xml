<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background"
    android:orientation="vertical"
    android:weightSum="8"

    >

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:local="http://schemas.android.com/apk/res-auto"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:minHeight="?attr/actionBarSize"

            local:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            local:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ll_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Paid History Details"
                        android:textColor="@android:color/black"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:gravity="right"
                    android:orientation="vertical"

                    >

                    <ImageView
                        android:id="@+id/iv_settings"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:src="@mipmap/settings" />


                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>

    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="10dp"
        android:background="@mipmap/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7.2"

        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:weightSum="8">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="Date"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:text="06/01/2018"
                    android:textColor="#000"
                    android:textSize="12dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.6"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="Bill Number"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:text="BL-016789-2018"
                    android:textColor="#000"
                    android:textSize="12dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.4"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="Student Name"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:text="Arun Karthik"
                    android:textColor="#000"
                    android:textSize="12dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="Class"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:text="IV"
                    android:textColor="#000"
                    android:textSize="12dp" />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/edittext_border">

            <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#dcdcdc"
                android:shrinkColumns="*"
                android:stretchColumns="*">


                <!-- Row 1 with single column -->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="30dp">


                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="#dcdcdc"
                        android:gravity="center"
                        android:text="Sl"


                        android:textColor="#000000"
                        android:textSize="12dp" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="#dcdcdc"
                        android:paddingLeft="10dp"
                        android:text="Particular"
                        android:textColor="#000000"
                        android:textSize="12dp" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="#dcdcdc"
                        android:paddingLeft="10dp"
                        android:text="Discount"
                        android:textColor="#000000"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="#dcdcdc"
                        android:paddingLeft="12dp"
                        android:text="Amount"
                        android:textColor="#000000"
                        android:textSize="13dp" />


                </TableRow>

                <!-- Row 2 with 3 columns -->


                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="#fff"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="#000000"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="#fff"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="Tution Fees"
                        android:textColor="#000000"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="#fff"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="0%"
                        android:textColor="#000000"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="#fff"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="1200"
                        android:textColor="#000000"
                        android:textSize="12dp" />

                </TableRow>

                <!-- Row 3 with 2 columns -->
                <TableRow

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="#fff"
                        android:gravity="center"
                        android:text="2"
                        android:textColor="#000000"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="#fff"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="Bus Fees"
                        android:textColor="#000000"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="#fff"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="0%"
                        android:textColor="#000000"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="#fff"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="600"
                        android:textColor="#000000"
                        android:textSize="12dp" />

                </TableRow>

                <TableRow

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="#fff"
                        android:gravity="center"
                        android:text="3"
                        android:textColor="#000000"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="#fff"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="Lab"
                        android:textColor="#000000"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="#fff"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="0%"
                        android:textColor="#000000"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="#fff"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="600"
                        android:textColor="#000000"
                        android:textSize="12dp" />

                </TableRow>

                <TableRow

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="#fff"
                        android:gravity="center"
                        android:text="4"
                        android:textColor="#000000"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="#fff"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="Tution Fees"
                        android:textColor="#000000"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="#fff"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="0%"
                        android:textColor="#000000"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="#fff"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="600"
                        android:textColor="#000000"
                        android:textSize="12dp" />

                </TableRow>

            </TableLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

