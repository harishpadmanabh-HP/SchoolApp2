<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cd_hd"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#FFFFFF">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/ll_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView

                android:layout_width="@dimen/logo"
                android:layout_height="@dimen/logo"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:src="@mipmap/logo_school"
                local:layout_constraintBottom_toTopOf="parent"
                local:layout_constraintLeft_toRightOf="parent"
                local:layout_constraintTop_toBottomOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Navigation"
                android:textColor="@color/blue"
                android:textSize="20dp"
                local:layout_constraintBottom_toTopOf="parent"
                local:layout_constraintLeft_toRightOf="parent"
                local:layout_constraintRight_toLeftOf="parent"
                local:layout_constraintTop_toBottomOf="parent" />
            <!--<ImageView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="30dp"-->
            <!--android:layout_gravity="center_vertical"-->
            <!--android:src="@mipmap/logout"-->
            <!--android:id="@+id/logout"-->
            <!--local:layout_constraintBottom_toTopOf="parent"-->
            <!--local:layout_constraintTop_toBottomOf="parent"-->
            <!--local:layout_constraintRight_toLeftOf="parent"/>-->

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#DADADA" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:src="@mipmap/locmap" />

    <TextView
        android:id="@+id/txtbtn_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_press_new"
        android:gravity="center"
        android:padding="10dp"
        android:text="Start"
        android:textColor="@color/textcolor"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtbtn_end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/delete_button_press"
        android:gravity="center"
        android:padding="10dp"
        android:text="Trip Complete"
        android:textColor="@color/textcolor"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_press"
        android:gravity="center"
        android:padding="10dp"
        android:text="Enable GPS"
        android:textColor="@color/textcolor"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="gone" />


</LinearLayout>
