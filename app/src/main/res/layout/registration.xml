<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="8">

        <LinearLayout
            android:id="@+id/ll_top"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/ll_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <TextView
                            style="@android:style/TextAppearance.DeviceDefault.Medium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Register"

                            android:textColor="@color/textcolor"
                            android:textSize="22dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/close"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_alignParentRight="true"
                        android:gravity="right"


                        >

                        <ImageView
                            android:id="@+id/img_reg_close"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_gravity="right"
                            android:src="@mipmap/close" />
                    </LinearLayout>
                </RelativeLayout>


            </android.support.v7.widget.Toolbar>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/ll_list"
            android:background="@color/transparent"
            android:paddingTop="10dp"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:weightSum="6">

                <ImageView
                    android:id="@+id/img_school_logo"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_weight="6"
                    android:src="@mipmap/photo" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center"

                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:weightSum="6">

                <EditText
                    android:id="@+id/et_schoolname"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"

                    android:hint="School Name"
                    android:inputType="text"
                    android:textColorHint="@color/grey" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center"

                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:weightSum="6">

                <EditText
                    android:id="@+id/et_addr"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"

                    android:hint="Address"
                    android:inputType="textPostalAddress"
                    android:textColorHint="@color/grey" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center"

                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:weightSum="6">

                <EditText
                    android:id="@+id/et_state"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"

                    android:hint="State"
                    android:inputType="text"
                    android:textColorHint="@color/grey" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center"

                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:weightSum="6">

                <EditText
                    android:id="@+id/et_city"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"


                    android:hint="City"
                    android:inputType="text"
                    android:textColorHint="@color/grey" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center"

                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:weightSum="6">

                <EditText
                    android:id="@+id/et_web"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"

                    android:hint="Website"
                    android:inputType="textWebEditText"
                    android:textColorHint="@color/grey" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center"

                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:weightSum="6">

                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"

                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:textColorHint="@color/grey" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center"

                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:weightSum="6">

                <EditText
                    android:id="@+id/et_phno"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"

                    android:hint="Contact Number"
                    android:inputType="number"
                    android:textColorHint="@color/grey" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center"

                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:weightSum="6">

                <EditText
                    android:id="@+id/et_pswd"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:hint="Password"
                    android:inputType="numberPassword"
                    android:textColorHint="@color/grey" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center"

                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:weightSum="6">

                <EditText
                    android:id="@+id/et_cfm_pswd"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:layout_weight="4"
                    android:hint="Confirm Password"
                    android:inputType="numberPassword"
                    android:textColorHint="@color/grey" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="6">

                <ImageView
                    android:id="@+id/signup"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_weight="6"
                    android:src="@mipmap/register" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_base"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"

                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Already have an account?"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/txt_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Please Login"
                        android:textColor="@color/aqua"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:gravity="center"

                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"

                    android:paddingTop="10dp"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="By signing up, you have to agree the "
                        android:textSize="10sp">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Terms and Conditions"
                        android:textColor="@color/yellow"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="and"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Privacy Policy"
                        android:textColor="@color/yellow"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="of the app"
                        android:textSize="10sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>


</ScrollView>