<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:id="@+id/mainLayout"
    android:background="#ffffff"
    android:layout_gravity="center"
    android:paddingTop="20dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingLeft="25dp"

        android:id="@+id/ll_busid">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="@android:color/black"
            android:id="@+id/bregno"
            android:text="Busname"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/ll_busroute"
        android:layout_toLeftOf="@+id/busimg"


        android:paddingLeft="20dp"
        android:layout_toRightOf="@+id/ll_busid">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:id="@+id/location"
            android:textColor="@android:color/black"
            android:text="Bus route"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:id="@+id/busimg"

        android:layout_alignParentRight="true"


        android:orientation="horizontal">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"

        android:id="@+id/ll_status"
        android:paddingLeft="25dp"




        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/bus_stop"
            android:visibility="invisible"
            android:src="@drawable/st_01"
           />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/bus_run"
            android:visibility="visible"
            android:src="@drawable/st_02"
            />
    </RelativeLayout>
    </LinearLayout>
    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/line" />
</RelativeLayout>