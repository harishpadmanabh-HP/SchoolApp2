<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@mipmap/white_bg">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#FFFFFF"
        android:id="@+id/cd_hd">
        <android.support.constraint.ConstraintLayout
            android:id="@+id/ll_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView

                android:layout_width="@dimen/logo"
                android:layout_height="@dimen/logo"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/logo_school"
                local:layout_constraintBottom_toTopOf="parent"
                local:layout_constraintTop_toBottomOf="parent"
                local:layout_constraintLeft_toRightOf="parent"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="@color/blue"
                android:textSize="20dp"
                android:gravity="center"
                local:layout_constraintBottom_toTopOf="parent"
                local:layout_constraintTop_toBottomOf="parent"
                local:layout_constraintLeft_toRightOf="parent"
                local:layout_constraintRight_toLeftOf="parent"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/logout"
                android:id="@+id/logout"
                local:layout_constraintBottom_toTopOf="parent"
                local:layout_constraintTop_toBottomOf="parent"
                local:layout_constraintRight_toLeftOf="parent"/>

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#DADADA"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@mipmap/attendence"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:id="@+id/attendence"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Attendence"
                android:textSize="20sp"
                android:textColor="@color/blue"
                android:layout_gravity="center" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tap for Attendence"
                android:textSize="15dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/grey"
                android:layout_gravity="center"/>
            <ImageView
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:src="@mipmap/message"
                android:layout_gravity="center_horizontal"
                android:id="@+id/message"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Message"
                android:textSize="20sp"
                android:textColor="@color/blue"
                android:layout_gravity="center" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tap for Message"
                android:textSize="15dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/grey"
                android:layout_gravity="center"/>

            <ImageView
                android:layout_marginTop="15dp"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@mipmap/add_mark"
                android:layout_gravity="center_horizontal"
                android:id="@+id/addmark"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Marks"
                android:layout_marginTop="5dp"
                android:textSize="20sp"
                android:textColor="@color/blue"
                android:layout_gravity="center" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tap for adding Marks"
                android:textSize="15dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/grey"
                android:layout_gravity="center"/>

        </LinearLayout>



    </ScrollView>


