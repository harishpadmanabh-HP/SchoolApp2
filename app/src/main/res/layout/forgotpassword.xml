<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="center">
        <!--<ImageView-->

        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="50dp"-->
        <!--android:layout_gravity="center"-->
        <!--android:src="@mipmap/school_icon"-->
        <!--local:layout_constraintBottom_toTopOf="parent"-->
        <!--local:layout_constraintTop_toBottomOf="parent"-->
        <!--local:layout_constraintLeft_toRightOf="parent"-->
        <!--android:layout_marginTop="5dp"/>-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:paddingLeft="15dp"
            android:text="Forgot Password "
            android:textColor="@color/green"
            android:textSize="20dp"
            android:textStyle="bold"
            local:layout_constraintBottom_toTopOf="parent"
            local:layout_constraintLeft_toRightOf="parent"
            local:layout_constraintTop_toBottomOf="parent" />

        <ImageView
            android:id="@+id/fgtpass_close"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:src="@mipmap/close"
            local:layout_constraintBottom_toTopOf="parent"
            local:layout_constraintRight_toLeftOf="parent"
            local:layout_constraintTop_toBottomOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!--<ImageView-->
        <!--android:id="@+id/add_image"-->
        <!--android:layout_width="60dp"-->
        <!--android:layout_height="50dp"-->
        <!--android:layout_gravity="left"-->
        <!--android:layout_marginLeft="30dp"-->
        <!--android:src="@mipmap/white_camera"-->
        <!--/>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="160dp"
            android:background="@drawable/green_box"
            android:gravity="left"
            android:orientation="vertical">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:src="@mipmap/schoolman_glow" />

        </LinearLayout>

    </LinearLayout>


    <!--<TextView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:gravity="center"-->
    <!--android:text="Enter your Email Id to get the link to reset password"-->
    <!--android:textColor="@android:color/white"-->
    <!--android:textColorHint="@color/grey"-->
    <!--android:textStyle="bold"-->
    <!--android:layout_margin="5dp"-->
    <!--android:textSize="15sp" />-->
    <TextView
        style="@android:style/TextAppearance.DeviceDefault.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:text="Email:"
        android:textColor="@color/white_text"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/edittext_border_new"
        android:hint="Email..."
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textColor="@color/colorwhite"
        android:textColorHint="@color/grey"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_press_new"
        android:gravity="center"
        android:padding="10dp"
        android:text="Send Reset Link"
        android:textColor="@color/textcolor"
        android:textSize="20sp"
        android:textStyle="bold" />
