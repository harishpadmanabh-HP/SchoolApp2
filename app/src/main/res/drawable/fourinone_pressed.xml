<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">

        <shape android:shape="rectangle">
            <corners android:radius="2dip" />
            <gradient android:angle="0" android:endColor="@color/colorPrimaryDark" android:startColor="@color/colorPrimary" />
            <stroke android:width="4dip" android:color="@color/colorgray" />
            <padding android:bottom="0dip"
                android:left="0dip"
                android:right="0dip"
                android:top="0dip" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners
                android:radius="8dip"/>
            <stroke android:width="1dip" android:color="@color/colorgray" />
            <solid android:color="@color/colorPrimaryDark"/>
            <padding android:bottom="0dip"
                android:left="0dip"
                android:right="0dip"
                android:top="0dip" />
        </shape>
    </item>

    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="8dip" />


        </shape>
    </item>
</selector>
